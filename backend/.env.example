# Configuração do Banco de Dados MongoDB
MONGO_USER=seu_usuario
MONGO_PASS=sua_senha
MONGO_DB=controle-financeiro
MONGO_HOST=cluster0.vbirz.mongodb.net

# Configuração do Servidor
PORT=5000
NODE_ENV=development

# Configuração do JWT
JWT_SECRET=seu_jwt_secret_muito_secreto_aqui
JWT_EXPIRE=7d



# Configuração do Email (Opção 1: Outlook - RECOMENDADO)
EMAIL_HOST=smtp-mail.outlook.com
EMAIL_PORT=587
EMAIL_USER=seu_email@outlook.com
EMAIL_PASS=sua_senha_normal
EMAIL_FROM=Controle Financeiro <seu_email@outlook.com>

# Configuração do Email (Opção 2: Gmail - se tiver App Password)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=seu_email@gmail.com
# EMAIL_PASS=sua_app_password_16_caracteres
# EMAIL_FROM=Controle Financeiro <seu_email@gmail.com>

# Configuração do Email (Opção 3: SendGrid - melhor para produção)
# SENDGRID_API_KEY=SG.sua_chave_sendgrid_aqui
# EMAIL_FROM=Controle Financeiro <noreply@seudominio.com>

# IMPORTANTE: Use apenas UMA das opções acima
# Outlook é mais estável que Gmail em ambientes cloud
# Gmail requer App Password (não senha normal)

# Configuração de Desenvolvimento
# EMAIL_DEV_MODE=true  # Ativa modo desenvolvimento (simula e-mails)
# Se EMAIL_DEV_MODE=true, os e-mails serão simulados no console

# Configuração de Logs
LOG_LEVEL=info
ENABLE_DEBUG=false
