# Configuração do Banco de Dados MongoDB
MONGO_USER=seu_usuario
MONGO_PASS=sua_senha
MONGO_DB=controle-financeiro
MONGO_HOST=cluster0.vbirz.mongodb.net

# Configuração do Servidor
PORT=5000
NODE_ENV=development

# Configuração do JWT
JWT_SECRET=seu_jwt_secret_muito_secreto_aqui
JWT_EXPIRE=7d

# Configuração do Email (Serviço Robusto)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=seu_email@gmail.com
EMAIL_PASS=sua_app_password
EMAIL_FROM=Controle Financeiro <noreply@seudominio.com>

# Alternativa: Mailtrap (para desenvolvimento)
MAILTRAP_USER=seu_usuario_mailtrap
MAILTRAP_PASS=sua_senha_mailtrap

# Alternativa: SendGrid (produção)
SENDGRID_API_KEY=sua_chave_sendgrid
EMAIL_FROM_SENDGRID=noreply@seudominio.com

# Configuração de Logs
LOG_LEVEL=info
ENABLE_DEBUG=false
