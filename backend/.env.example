# Configuração do Banco de Dados MongoDB
MONGO_USER=seu_usuario
MONGO_PASS=sua_senha
MONGO_DB=controle-financeiro
MONGO_HOST=cluster0.vbirz.mongodb.net

# Configuração do Servidor
PORT=5000
NODE_ENV=development

# Configuração do JWT
JWT_SECRET=seu_jwt_secret_muito_secreto_aqui
JWT_EXPIRE=7d



# Configuração do Email (Opção 1: Resend - RECOMENDADO)
RESEND_API_KEY=re_sua_chave_aqui
EMAIL_FROM=Controle Financeiro <noreply@seudominio.com>

# Configuração do Email (Opção 2: SendGrid - backup)
# SENDGRID_API_KEY=SG.sua_chave_sendgrid_aqui
# EMAIL_FROM=Controle Financeiro <noreply@seudominio.com>

# Configuração do Email (Opção 3: Mailgun - alternativa)
# MAILGUN_API_KEY=key-sua_chave_aqui
# MAILGUN_USER=postmaster@seudominio.mailgun.org
# EMAIL_FROM=Controle Financeiro <noreply@seudominio.com>

# Configuração do Email (Opção 4: Outlook - fallback)
# EMAIL_USER=seu_email@outlook.com
# EMAIL_PASS=sua_senha_normal
# EMAIL_FROM=Controle Financeiro <seu_email@outlook.com>

# IMPORTANTE: Configure apenas UMA das opções acima
# Resend é o mais simples: só API Key, sem App Password
# 3000 e-mails grátis/mês vs 200 do SendGrid

# Configuração de Desenvolvimento
# EMAIL_DEV_MODE=true  # Ativa modo desenvolvimento (simula e-mails)
# Se EMAIL_DEV_MODE=true, os e-mails serão simulados no console

# Configuração de URLs
FRONTEND_URL=https://controlefinanceiro.onrender.com

# Configuração de Logs
LOG_LEVEL=info
ENABLE_DEBUG=false
