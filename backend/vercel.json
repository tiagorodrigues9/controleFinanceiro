{
  "version": 2,
  "name": "controle-financeiro-backend",
  "rewrites": [
    {
      "source": "/api/auth/(.*)",
      "destination": "/api/auth.js"
    },
    {
      "source": "/api/dashboard/(.*)",
      "destination": "/api/dashboard.js"
    },
    {
      "source": "/api/(contas|fornecedores|gastos|contas-bancarias|grupos|extrato|transferencias|formas-pagamento|cartoes|notificacoes|emails)(.*)",
      "destination": "/api/crud.js"
    },
    {
      "source": "/(health|ping)",
      "destination": "/api/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/api/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "api/index.js": {
      "maxDuration": 10,
      "memory": 512
    },
    "api/auth.js": {
      "maxDuration": 10,
      "memory": 512
    },
    "api/dashboard.js": {
      "maxDuration": 15,
      "memory": 1024
    },
    "api/crud.js": {
      "maxDuration": 10,
      "memory": 512
    }
  }
}
